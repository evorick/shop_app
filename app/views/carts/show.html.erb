<h2>Your Shopping Cart</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %> &times;</td>
        <td><%= number_to_currency item.price %></td>
        <td><%= number_to_currency item.total_price %></td>
        <td><%= button_to "Delete", item, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Order Subtotal:  <%= number_to_currency @cart.subtotal %></h3>

<%= link_to "Continue Shopping", storefront_index_path, class: "btn btn-success btn-sm" %>

<%= link_to "Checkout", new_order_path, class: "btn btn-info btn-sm" %>

<%= button_to "Empty Cart", @cart, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm", form: {style: 'display:inline-block;'} %>
