<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "name" %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control", placeholder: "price" %>
  </div>
  <div class="field form-group">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, class: "form-control", placeholder: "quantity" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", placeholder: "description" %>
  </div>
  <div class="field form-group">
    <%= f.label :brand_id %><br>
    <%= f.collection_select :brand_id, Brand.order(:name).all, :id, :name, {prompt: "Select a brand"}, {class: "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.order(:name).all, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
    <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
